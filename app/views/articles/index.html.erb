<div class="navbar">
<h1>Articles</h1>
<div class = "link"><%= link_to "Create a new article", new_article_path %></div>
</div>

<ul class="articles">
<% @articles.each do |article| %>
  <li class = "flexbox">
    <p class = 'text'><%= link_to article.title, article_path(article) %></p>
      <p>
        <%= link_to ('<i class="fa-solid fa-trash-can"></i>').html_safe, article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </p>
  </li>
<% end %>
</ul>
